@using Shop.Models;
@model Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BikeProp</h2>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ViewBag.Title - Catalog</title>
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/productDetail.css" rel="stylesheet" />

</head>

<body>

    <div class="container bootdey">
        <div class="col-md-12">
            <section class="panel">
                <div class="panel-body">
                    <div class="col-md-6">
                        <div class="pro-img-details">
                            <img src="https://via.placeholder.com/550x380/FFB6C1/000000" alt="">
                        </div>
                        <div class="pro-img-list">
                            <a href="#">
                                <img src="https://via.placeholder.com/115x100/87CEFA/000000" alt="">
                            </a>
                            <a href="#">
                                <img src="https://via.placeholder.com/115x100/FF7F50/000000" alt="">
                            </a>
                            <a href="#">
                                <img src="https://via.placeholder.com/115x100/20B2AA/000000" alt="">
                            </a>
                            <a href="#">
                                <img src="https://via.placeholder.com/120x100/20B2AA/000000" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h4 class="pro-d-title">
                            <a href="#" class="">
                                @Model.Name

                            </a>
                        </h4>
                        <p>
                            @Model.Description
                        </p>
                        <div class="product_meta">
                            <span class="posted_in"> <strong>Categories:</strong> <a rel="tag" href="#">@Model.categoryId</a></span>
                        </div>
                        <div class="m-bot15"> <strong>Price : </strong> <span class="amount-old">$544</span>  <span class="pro-price"> $@Model.Price</span></div>
                        <div class="form-group">
                            <input type="hidden" placeholder="1" class="form-control quantity">
                        </div>
                        <p>
                            <button class="btn btn-round btn-danger" type="button"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
                        </p>
                    </div>
                </div>
            </section>
        </div>
    </div>
</body>
</html>

